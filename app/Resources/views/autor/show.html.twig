{% extends 'base.html.twig' %}

{% block body %}
    <h1>Autor</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ autor.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ autor.name }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ autor.email }}</td>
        </tr>
        <tr>
            <th>Old</th>
            <td>{{ autor.old }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('autor_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('autor_edit', { 'id': autor.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
